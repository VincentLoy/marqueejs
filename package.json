{
  "name": "marqueejs",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/marqueejs.umd.min.js",
  "module": "./dist/marqueejs.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite docs/src --open",
    "build": "vite build && bun run build:types",
    "build:types": "tsc && cp -R ./src/types ./dist/declarations/types",
    "build:docs": "vite build docs/src --outDir ../dist --emptyOutDir",
    "preview": "bun run build:docs && vite docs/dist --open",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "serve": "^14.0.0",
    "tailwindcss": "^3.0.0",
    "tsc-alias": "^1.8.10",
    "vite": "^6.0.7"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  }
}
