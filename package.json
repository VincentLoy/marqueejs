{
  "name": "marqueejs",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/marqueejs.umd.min.js",
  "module": "./dist/marqueejs.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite docs/src --open",
    "build": "vite build && bun run build:types",
    "build:types": "tsc && cp -R ./src/types ./dist/declarations/types",
    "build:docs": "vite build docs/src --outDir ../dist --emptyOutDir",
    "build:all": "bun run build && bun run build:docs",
    "preview": "bun run build:docs && vite docs/dist --open",
    "test": "vitest --ui"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.21",
    "@iconify-json/vscode-icons": "^1.2.9",
    "@iconify/tailwind": "^1.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.0.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.0.0",
    "serve": "^14.0.0",
    "tailwindcss": "^3.0.0",
    "tsc-alias": "^1.8.10",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  }
}
